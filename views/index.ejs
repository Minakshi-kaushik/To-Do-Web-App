<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>To-Do List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">


</head>
<body class="container my-5">
    <h1 class="heading">To-Do List üìù</h1>
      <p class="subheading">Plan it. Do it. Own it.</p>


    <!-- Form to add new task -->
    <form action="/add" method="POST" class="d-flex mb-4">
        <input type="text" name="task" class="form-control me-2" placeholder="Enter a new task" required>
        <button class="btn btn-primary">Add</button>
    </form>

    <!-- Task list -->
    <ul class="list-group">
        <% tasks.forEach((task, i) => { 
   if (typeof task === 'object') { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="form-check">
            <form action="/toggle" method="POST" class="d-inline">
                <input type="hidden" name="index" value="<%= i %>">
                <input class="form-check-input me-2" type="checkbox" onchange="this.form.submit()" <%= task.completed ? 'checked' : '' %>>
            </form>
            <span class="<%= task.completed ? 'text-decoration-line-through text-muted' : '' %>">
                <%= task.text %>
            </span>
            <br>
            <small class="text-muted">Added: <%= task.date %></small>
        </div>
        <form action="/delete" method="POST" class="d-inline">
            <input type="hidden" name="index" value="<%= i %>">
            <button class="btn btn-danger btn-sm">Delete</button>
        </form>
    </li>
<% } }); %>

    </ul>

</body>
</html>
